<html>
<head>
    <title>Tenant Administrator Consent</title>
</head>
<body>
    <div id="consentGranted" style="display: none">
        Thank you!    
    </div>
    <div id="consentDenied" style="display: none">
        Tenant administrator consent is required to create and manage teams.
        Click <a href="https://login.microsoftonline.com/common/adminconsent?client_id={{appId}}&state=12345&redirect_uri={{baseUri}}/adminconsent/callback">here</a> to grant consent.
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha384-VC7EHu0lDzZyFfmjTPJq+DFyIn8TUGAJbEtpXquazFVr00Q/OOx//RjiZ9yU9+9m" crossorigin="anonymous"></script>
    <script type="text/javascript">
        let queryParams = {};
        location.search.substr(1).split("&").forEach(function(item) {
            let s = item.split("="),
            k = s[0],
            v = s[1] && decodeURIComponent(s[1]);
            queryParams[k] = v;
        });

        if (queryParams["admin_consent"] === "True") {
            $("#consentDenied").css({ display: "none" });
            $("#consentGranted").css({ display: "" });
        } else {
            $("#consentDenied").css({ display: "" });
            $("#consentGranted").css({ display: "none" });
        }
    </script>
</body>
</html>